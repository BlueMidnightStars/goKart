/**index.wxss**/
page{
  margin:0 auto;
  padding: 0;
  box-sizing: border-box;
}
.header-container{
  padding: 0 30rpx;
  background: linear-gradient(#ff6f20,#fff,#fff);
}
.nav-section{
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0 40rpx;
}
.nav-item{
  text-align:center;
  font-size: 26rpx;
}
.nav-item-image{
  display: inline-block;
  width: 69rpx;
  height: 69rpx;
  margin-bottom: 13rpx;
}
.essay-container{
  background-color: #f4f4f4;
}
.essay-section{
  padding-top: 16rpx;
}
.essay-item{
  width: 100%;
  background-color: #fff;
  margin-bottom: 16rpx;
  padding: 19rpx 30rpx;
}
.essay-item-title{
  width: 690rpx;
  display: block;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 19rpx;
}
.essay-item-base{
  display: flex;
  justify-content: space-between;
  width: 690rpx;
}
.essay-item-base-text{
  width: 420rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 41rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;   
  overflow: hidden;
  text-overflow:ellipsis;
}
.essay-item-base-image{
  display: inline-block;
  width: 240rpx;
  height: 160rpx;
}
.essay-item-footer{
  width: 690rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 30rpx;
}
.essay-item-footer-title{
  font-size: 26rpx;
  color: #666;

}
.essay-item-footer-original{
  width: 70rpx;
  height: 35rpx;
  border: 1px solid #FF9600;
  font-size: 22rpx;
  color: #FF9600;
  text-align: center;
  line-height: 35rpx;
  margin-right: 8px;
  display: inline-block;
}
.essay-item-footer-share{
  width: 26rpx;
  height: 26rpx;
}
.body-essay-end{
  font-size: 22rpx;
  color: #666;
  text-align: center;
  line-height: 60rpx;
}