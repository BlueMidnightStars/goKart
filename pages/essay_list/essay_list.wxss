.nav-section{
    padding: 28rpx 0;
    background-color: #fff;
    display: flex;
}
.nav-item{
    margin: 0 28rpx; 
    font-size: 34rpx;
    line-height: 50rpx;
    font-weight: 300;
}
.nav-item .active{
    font-weight: 700;
}

.essay-container{
background-color: #f4f4f4;
}
.essay-section{
padding-top: 6rpx;
}
.essay-item{
width: 100%;
background-color: #fff;
margin-bottom: 16rpx;
padding: 19rpx 30rpx;
}
.essay-item-title{
width: 690rpx;
display: block;
overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
font-size: 34rpx;
color: #333;
font-weight: 500;
margin-bottom: 19rpx;
}
.essay-item-base{
display: flex;
justify-content: space-between;
width: 690rpx;
}
.essay-item-base-text{
width: 420rpx;
font-size: 28rpx;
color: #666;
line-height: 41rpx;
display: -webkit-box;
word-break: break-all;
-webkit-box-orient: vertical;
-webkit-line-clamp:3;   
overflow: hidden;
text-overflow:ellipsis;
}
.essay-item-base-image{
display: inline-block;
width: 240rpx;
height: 160rpx;
}
.essay-item-footer{
width: 690rpx;
display: flex;
justify-content: space-between;
align-items: center;
padding-top: 30rpx;
}
.essay-item-footer-title{
font-size: 26rpx;
color: #666;

}
.essay-item-footer-original{
width: 70rpx;
height: 35rpx;
border: 1px solid #FF9600;
font-size: 22rpx;
color: #FF9600;
text-align: center;
line-height: 35rpx;
margin-right: 8px;
display: inline-block;
}
.essay-item-footer-share{
width: 26rpx;
height: 26rpx;
}
.body-essay-end{
font-size: 22rpx;
color: #666;
text-align: center;
line-height: 60rpx;
}
.share-container{
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: rgba(0,0,0,0.2);
    z-index: 999;
}
.cover-container{
    display: block;
    height: 100%;
    width: 100%;
    z-index: 1;
}
.share-section{
    display: block;
    width: 750rpx;
    height: 400rpx;
    background-color: #fff;
    border-radius: 5px 5px 0;
    position: absolute;
    bottom: 0;
    left: 0;
    padding-top: 40rpx;
}
.share-title{
font-size: 28rpx;
color: #333;
font-weight: 500;
text-align: center;
margin-bottom: 40rpx;
}
.share-list{
    display: flex;
    justify-content: space-around;
}
.share-item{
    text-align: center;
}
.share-item-map{
    width: 130rpx;
    height: 130rpx;
}
.share-item-title{
    font-size: 28rpx;
    color: #555351;
}